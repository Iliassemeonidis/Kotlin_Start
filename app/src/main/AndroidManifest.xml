<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kotlinstart">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".KotlinStartApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.KotlinStart">
        <activity
            android:name=".view.shared.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".view.detailsscreen.DetailsService" />

        <service
            android:name=".view.experiments.MainService"
            android:enabled="true"
            android:exported="true"></service>

        <service
            android:name=".view.experiments.BoundService"
            android:enabled="true"
            android:exported="true" />


        <receiver android:name=".view.experiments.MainBroadcastReceiver">
            <intent-filter>
                <action android:name="Receive weather info sdfghsrdfgh" />
            </intent-filter>
        </receiver>
    </application>

</manifest>